user tomcat;
worker_processes auto;
pid /var/run/tomcat.pid;
error_log /var/log/tomcat/error.log;

# Load dynamic modules. See /usr/share/doc/tomcat/README.dynamic.
include /usr/share/tomcat/modules/*.conf;

events {
    worker_connections 1024;
}

http {
    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  /var/log/tomcat/access.log  main;

    sendfile            on;
    tcp_nopush          on;
    tcp_nodelay         on;
    keepalive_timeout   65;
    types_hash_max_size 2048;

    include             /etc/tomcat/mime.types;
    default_type        application/octet-stream;

    # Load modular configuration files from the /etc/tomcat/conf.d directory.
    # See http://tomcat.org/en/docs/ngx_core_module.html#include
    # for more information.
    include /etc/tomcat/conf.d/*.conf;

    index   index.html index.htm;
}